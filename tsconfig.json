{
  "defaultSeverity": "error",
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es6",
      "dom",
      "esnext.asynciterable"
    ],
    "target": "es2017",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "outDir": "./dist",
    "allowJs": true
  },
  "include": [
    "./lib/**/*"
  ]
}